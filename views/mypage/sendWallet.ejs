<div class="wrapper">
	<header>
		<h1><a href="#n" class="logo"><img src="images/BI_GBT2.png"></a></h1>
		<a href="#n" class="mobile_menu"><i class="xi-bars"></i></a>
	</header>

	<div class="sub_container send">
    <!-- PC 지갑 부분 -->
    <% include ./main_wallet.ejs %>

		<div class="col right">
			<div class="col_wrap">
        <!-- pc 메뉴 -->
				<% include ../includes/pc_menu.ejs %>
				<div class="contents">
					<h4>
						Enter
						<select>
							<option>ETH</option>
							<option>OTQ</option>
						</select>
						wallet addres & amount
					</h4>
					<div class="form">
						<p class="insert">
							<label>From Address</label>
							<input type="text" name="" placeholder="Enter Wallet Address">
							<small class="caution">The wallet address has not been entered.</small>
						</p>
						<p class="insert">
							<label>To Address</label>
							<% if (type == 1) { %>
							<input type="text" name="" placeholder="Enter Wallet Address" value=''>
							
							<% } else if (type == 2) { %>
							<input type="text" name="" placeholder="OTQ Token Address" >

							    <% }>
							<small class="caution">The wallet address has not been entered.</small>
						</p>
						<p class="insert">
							<label>Amount</label>
							<input type="number" name="" placeholder="Amount (number)">
							<small class="caution">Token(coin) quantity not entered  </small>
						</p>
						<p class="insert">
							<label>Transactions Fee</label>
							<input type="text" name="" value="0.003 ~ 0.005" readonly="readonly">
						</p>
					</div>
					<a href="#n" class="btn_submit btnPopNum1">Send</a>
				</div>
			</div>
		</div>
	</div>
</div>

