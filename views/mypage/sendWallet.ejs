<!-- Send 팝업 -->
<div class="popupWrap popSend">
	<div class="page_popup">
		<a href="#n" class="btn_popClose"><i class="xi-close"></i></a>
		<ul class="tabMenu">
			<li class="wallet"><a href="#n">Wallet</a></li>
			<li class="eth"><a href="#n">ETH</a></li>
			<li class="gbt"><a href="#n">OTQ</a></li>
		</ul>
		<div class="tabCn wallet">
			<dl class="amount">
				<dt>Ethereum</dt>
				<dd><span>0.124674</span>ETH</dd>
			</dl>
			<div class="s_title">
				<h3>Send</h3>
				<small>Enter ETH wallet address & amount</small>
			</div>
			<div class="contents send_mo">
				<div class="form">
					<p class="insert">
						<label>From Address</label>
						<input type="text" name="" placeholder="Enter Wallet Address">
						<small class="caution">The wallet address has not been entered.</small>
					</p>
					<p class="insert">
						<label>To Address</label>
						<% if (type == 1) { %>
						<input type="text" name="" placeholder="Enter Wallet Address" value=''>
						 <% } else if (type == 2) { %>
						 <input type="text" name="" placeholder="Enter Wallet Address" value=''>
                                                 <% } %>
						<small class="caution">The wallet address has not been entered.</small>
					</p>
					<p class="insert">
						<label>Amount</label>
						<input type="number" name="" placeholder="Amount (number)">
						<small class="caution">Token(coin) quantity not entered  </small>
					</p>
					<p class="insert">
						<label>Transactions Fee</label>
						<input type="text" name="" value="0.003 ~ 0.005" readonly="readonly">
					</p>
				</div>
				<a href="#n" class="btn_submit btnPopNum1">Send</a>
			</div>
		</div>
	</div>
</div>

